<div id="<%= dom_id deliverable %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= deliverable.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Deadline:</strong>
    <%= deliverable.deadline %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Project:</strong>
    <%= deliverable.project_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this deliverable", deliverable, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this deliverable", edit_deliverable_path(deliverable), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
