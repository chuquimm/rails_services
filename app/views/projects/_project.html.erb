<div id="<%= dom_id project %>">
  <p class="my-5">
    <strong class="block font-medium mb-1"><%= ar_t("project.name") %>:</strong>
    <%= project.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1"><%= ar_t("project.description") %>:</strong>
    <%= project.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to v_t("show_link"), project, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
